pipeline{
    agent any
    environment{
        PATH = "/opt/apache-maven-3.6.3/bin:$PATH"
    }
	stages{
	   stage("Welcome"){
	      steps{
		      echo "Welcome to Declarative pipeline."
	      }
	   }
	   stage("Git Checkout"){
	      steps{
		      echo "Git CHeckout."
	      }
	   }
	   stage("Maven Build"){
	      steps{
		      sh "mvn clean package"
	      }
	   }
	   stage("Packaging"){
	      steps{
		      echo "Packaging."
	      }
	   }
	   stage("Upload to nexus"){
	      steps{
		      echo "Upload to nexus."
	      }
	   }
    }
}
